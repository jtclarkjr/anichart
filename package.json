{
  "name": "anichart",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:ssr": "bun run dev-unified.ts",
    "dev:ssr:legacy": "bun run dev-ssr.ts",
    "dev:ssr:simple": "PORT=5174 bun run server.ts",
    "pre-build": "run-p test:unit lint prettier:fix",
    "build-only": "vite build",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "build:ssr": "bun run build:client && bun run build:server",
    "start": "NODE_ENV=production bun run server-prod.ts",
    "preview:ssr": "bun run build:ssr && bun run start",
    "build": "run-s pre-build build-only",
    "test:unit": "vitest run --environment jsdom --root src/",
    "lint": "eslint ./src",
    "prettier:fix": "prettier --write ."
  },
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "graphql": "^16.12.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.23",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@pinia/testing": "^1.0.3",
    "@rushstack/eslint-patch": "^1.14.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/bun": "^1.3.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/eslint-plugin": "^1.4.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "jsdom": "^27.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "sass": "^1.93.3",
    "start-server-and-test": "^2.1.2",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "unplugin-vue-router": "^0.16.1",
    "vite": "^7.2.1",
    "vitest": "^4.0.7"
  }
}
